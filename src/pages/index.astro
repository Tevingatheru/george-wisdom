---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import VideoEmbed from "../components/VideoEmbed.astro";


const videos = [
	{ videoId: "Ztvf7J9t3-s?si=dgKTGXXZfXRzb9FS" },
	// ... more videos
];
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<section class="videos-section">
				{
					videos.map((video) => (
						<VideoEmbed key={video.videoId} videoId={video.videoId} />
					))
				}
			</section>
		
			<h1>Embrace the Power of Faith</h1>
			<p>
				Experience Transformation and Find Purpose through Resurrection
				Ministries
			</p>
			<p>
				Resurrection Ministries, led by Apostle George Wisdom, offers
				transformative teachings and a supportive community for
				individuals seeking to deepen their connection with faith. Join
				us on a journey of resurrection and discover your true purpose.
				Start your spiritual growth today with Resurrection Ministries.
			</p>
		</main>
		<Footer />
	</body>
</html>
